{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es2017.object"]
  },
  "include": [
    "custom-typings/**/*",
    "src/**/*",
    "test/**/*"
  ]
}